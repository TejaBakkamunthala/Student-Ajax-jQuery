
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<button class="btn btn-sm btn-primary m-2" id="btnAddStudent">Add Student</button>


@* <h1>Index</h1>*@

<table class="table table-bordered">
<thead>
    <tr class="text-center">
        <th>Id</th>
        <th>Name</th>
        <th>Fees</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>Operation</th>
    </tr>
</thead>
<tbody class="text-center" id="table_data"></tbody>
</table>



<div class="modal fade modal" id="StudentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="stdHeading">Add Student</h1>
                <button class="close text-danger" id="btnCloseMark"  data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group"  id="StdId">
                        <label>Id</label>
                        <input type="text" class="form-control" id="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter name" class="form-control" id="Name" autocomplete="off" />
                    </div>


                    <div class="form-group">
                        <label>Fees</label>
                        <input type="text" placeholder="Enter Fees" class="form-control" id="Fees" autocomplete="off" />
                    </div>



                    <div class="form-group">
                        <label>City</label>
                        <input type="text" placeholder="Enter city" class="form-control" id="City" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>State</label>
                        <input type="text" placeholder="Enter State" class="form-control" id="State" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <input type="text" placeholder="Enter country" class="form-control" id="Country" autocomplete="off" />
                    </div>
                  
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddStudent();" id="btnSave">Save</button>
                <button class="btn btn-warning" onclick="UpdateStudent()" id="btnUpdate" style="display:none">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal" id="btnClose">Close</button>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom.js"></script>